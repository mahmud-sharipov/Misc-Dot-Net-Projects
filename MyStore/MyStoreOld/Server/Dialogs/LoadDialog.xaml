<Window x:Class="Server.Dialogs.LoadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server.Dialogs"
        MaxHeight="150"  MaxWidth="200"
        Width="200" Height="150" WindowStyle="None" WindowStartupLocation="CenterScreen"
        MinHeight="150"  MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Margin="5 5" Style="{StaticResource MaterialDesignSubheadingTextBlock}" x:Name="TitleTb"/>
        <ProgressBar  Style="{StaticResource MaterialDesignCircularProgressBar}"  Value="0"  IsIndeterminate="True" Grid.Row="1" Width="80" Height="80" />
    </Grid>
</Window>
